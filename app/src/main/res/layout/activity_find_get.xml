        android:id="@+id/spin"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTelephone"
        android:layout_marginBottom="152dp"
        android:spinnerMode="dialog" />-->

    <TextView
        android:id="@+id/textView11f"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@id/editTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView12f"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/editRecePassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView13f"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/editPrice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView14f"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/editSize"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView15f"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/editAddress"
        android:layout_centerHorizontal="true" />


</RelativeLayout>